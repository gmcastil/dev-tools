{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "IO generator schema",
    "description": "Schema for describing PL pins....TBD",
    "type": "object",
    "properties": {
        "title": { "type" : "string"},
        "part": { "type" : "string"},
        "signals": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": { "type" : "string" },
                    "direction" : { "enum": ["in", "out", "inout"] },
                    "buffer": { "$ref": "defs/buffer.json" },
                    "iostandard": { "$ref": "defs/iostandard.json" },
                    "bank": { "type": "integer", "minimum": 0 }
                },
                "required": ["name", "direction", "buffer", "bank"],
                "oneOf": [
                    {
                        "required": ["pin"],
                        "properties": {
                            "pin": { "type": "string" }
                        }
                    },
                    {
                        "required": ["pins", "width"],
                        "properties": {
                            "pins": {
                                "type": "array",
                                "items": { "type": "string" }
                            },
                            "width": { "type": "integer", "minimum": 1 }
                        }
                    },
                    {
                        "required": ["pins"],
                        "properties": {
                            "pins": {
                                "type": "object",
                                "required": ["p", "n"],
                                "properties": {
                                    "p": { "type": "string" },
                                    "n": { "type": "string" }
                                }
                            }
                        }
                    },
                    {
                        "required": ["pins", "width"],
                        "properties": {
                            "pins": {
                                "type": "object",
                                "required": ["p", "n"],
                                "properties": {
                                    "p": {
                                        "type": "array",
                                        "items": { "type": "string" }
                                    },
                                    "n": {
                                        "type": "array",
                                        "items": { "type": "string" }
                                    }
                                }
                            },
                            "width": { "type": "integer", "minimum": 1 }
                        }
                    }
                ]
            }
        },
        "banks": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "bank": { "type": "integer", "minimum": 0 },
                    "comment": { "type": "string" },
                    "iostandard": { "$ref": "defs/iostandard.json" },
                    "performance": {
                        "type": "string",
                        "enum": ["HD", "HR", "HP"]
                    }
                },
                "required": ["bank", "iostandard", "performance"]
            }
        },
        "required": ["title", "part", "signals", "banks"]
    }
}

