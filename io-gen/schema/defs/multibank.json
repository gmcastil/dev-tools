{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "A signal defined across multiple banks, with pins grouped per bank.",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "bank": { "$ref": "defs/bank.json" },
            "pin": { "$ref": "defs/pin.json" },
            "pins": { "$ref": "defs/pins.json" },
            "pinset": { "$ref": "defs/pinset.json" },
            "offset": {
                "type": "integer",
                "minimum": 0
            }
        },
        "required": ["bank"],
        "oneOf": [
            { "required": ["pin"] },
            { "required": ["pins"] },
            { "required": ["pinset"] }
        ],
        "additionalProperties": false
    },
    "minItems": 2
}

